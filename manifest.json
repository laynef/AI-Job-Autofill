{
  "manifest_version": 3,
  "name": "Free AI Job Application Copilot",
  "version": "2.0",
  "description": "Uses AI to automatically fill out job applications based on your saved information and resume.",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
