{
  "manifest_version": 3,
  "name": "AI Autofill \u2014 All Inputs (v2.0)",
  "version": "2.0",
  "description": "Answers EVERY input: text, selects, radios, native buttons, custom dropdowns \u2014 with safe fallbacks.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "file:///*",
    "http://*/*",
    "https://*/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "worker.js",
    "type": "module"
  },
  "options_page": "options.html"
}